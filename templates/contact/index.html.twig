{% extends 'base.html.twig' %}

{% block content %}


<h2> Une question ? C'est par ici. </h2>


<div class="bg-white p-5 contact-form">
    <div class="form-group">
{{ form_start(form) }}
    {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}

        
</div>
<div class="form-group">
    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
    <p> Veuillez renseigner ce champs pour pouvoir être répondu dans les plus bref délais.</p>
</div>
<div class="form-group">
    {{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}

</div>

<div class="form-group">
    <input type="submit" value="Send" class="btn btn-primary py-3 px-5">
</div>
{{ form_end(form) }}
</div>

</div>
{% endblock %}
